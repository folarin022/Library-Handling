@model LibraryHandling.Dto.AuthorModel.AddAuthorDto

@{
    ViewData["Title"] = "Add New Author";
    Layout = "_LayoutAdmin"; // Your layout file
}

<div class="row justify-content-center">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h5 class="alert-heading">Form Errors:</h5>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm rounded-3">
            <div class="card-header bg-primary text-white py-3">
                <div class="d-flex align-items-center">
                    <a asp-action="Authors" class="text-white me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <h4 class="mb-0">Add New Author</h4>
                </div>
            </div>

            <div class="card-body p-4">
                <form asp-action="AddAuthor" method="post">
                    <!-- Name Field -->
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">
                            <i class="bi bi-person-fill text-primary me-2"></i>Author Name
                        </label>
                        <input asp-for="Name"
                               class="form-control form-control-lg"
                               placeholder="Enter author's full name"
                               required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Date of Birth Field -->
                    <div class="mb-4">
                        <label asp-for="DOB" class="form-label fw-semibold">
                            <i class="bi bi-calendar-event text-primary me-2"></i>Date of Birth
                        </label>
                        <input asp-for="DOB"
                               type="date"
                               class="form-control"
                               required />
                        <span asp-validation-for="DOB" class="text-danger small"></span>
                    </div>

                    <!-- Biography Field -->
                    <div class="mb-4">
                        <label asp-for="Bio" class="form-label fw-semibold">
                            <i class="bi bi-file-text text-primary me-2"></i>Biography
                        </label>
                        <textarea asp-for="Bio"
                                  class="form-control"
                                  rows="5"
                                  placeholder="Tell us about the author..."></textarea>
                        <span asp-validation-for="Bio" class="text-danger small"></span>
                    </div>
                    

                    <div class="mb-4">
                        <label asp-for="Books" class="form-label fw-semibold">
                            <i class="bi bi-person-fill text-primary me-2"></i>Book TItle
                        </label>
                        <input asp-for="Books"
                               class="form-control form-control-lg"
                               placeholder="Enter BookTitle"
                               required />
                        <span asp-validation-for="Books" class="text-danger small"></span>
                    </div>
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Authors" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save me-2"></i>Save Author
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set max date to today for DOB
        document.addEventListener('DOMContentLoaded', function() {
            const dobInput = document.querySelector('input[type="date"]');
            const today = new Date().toISOString().split('T')[0];
            dobInput.max = today;

            // Form validation
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            });

            // Auto-focus on name field
            document.querySelector('input[name="Name"]').focus();
        });
    </script>
}