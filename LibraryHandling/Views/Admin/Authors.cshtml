@model IEnumerable<LibraryHandling.Data.Author>

@{
    ViewData["Title"] = "Authors Management";
    Layout = "_LayoutAdmin";
}

<!-- Header Section -->
<div class="container-fluid py-4">
    <div class="row mb-5">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-primary mb-2">Authors</h1>
                    <p class="text-muted">Manage all authors in your library collection</p>
                </div>
                <div>
                    <a asp-action="AddAuthor" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-plus-circle me-2"></i>Add New Author
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <!-- Card Header -->
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-0"><i class="fas fa-users me-2"></i>Author List</h5>
                        </div>
                        <div class="col-auto">
                            <span class="badge bg-light text-primary fs-6 px-3 py-2">
                                @Model.Count() Authors
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Authors Table -->
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4 py-3">
                                            <i class="fas fa-user me-2 text-primary"></i>Name
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-file-alt me-2 text-primary"></i>Biography
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-calendar-day me-2 text-primary"></i>Date of Birth
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-calendar-day me-2 text-primary"></i>Book Title
                                        </th>
                                        <th class="text-end pe-4 py-3">
                                            <i class="fas fa-cog me-2 text-primary"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var author in Model)
                                    {
                                        <tr class="border-bottom fade-in">
                                            <td class="ps-4 py-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center me-3">
                                                        @author.Name.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <div>
                                                        <h6 class="fw-bold mb-0">@author.Name</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            @* <td class="ps-4 py-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center me-3">
                                                        @author.Books
                                                    </div>
                                                    <div>
                                                        <h6 class="fw-bold mb-0">@author.Books</h6>
                                                    </div>
                                                </div>
                                            </td> *@
                                            <td class="py-4">
                                                <p class="mb-0 text-muted">
                                                    @if (!string.IsNullOrEmpty(author.Bio))
                                                    {
                                                        if (author.Bio.Length > 70)
                                                        {
                                                            @author.Bio.Substring(0, 70)
                                                            <span>...</span>
                                                        }
                                                        else
                                                        {
                                                            @author.Bio
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted fst-italic">No biography available</span>
                                                    }
                                                </p>
                                            </td>
                                            <td class="py-4">
                                                <span class="badge bg-info bg-opacity-10 text-info p-3">
                                                    <i class="fas fa-birthday-cake me-2"></i>
                                                    @author.DOB.ToString("dd MMMM yyyy")
                                                </span>
                                            </td>
                                            <td class="text-end pe-4 py-4">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="EditAuthor"
                                                       asp-route-id="@author.Id"
                                                       class="btn btn-outline-primary btn-sm me-2">
                                                        <i class="fas fa-edit me-1"></i>Edit
                                                    </a>

                                                    <form asp-action="DeleteAuthor"
                                                          asp-route-id="@author.Id"
                                                          method="post"
                                                          class="d-inline"
                                                          onsubmit="return confirmDelete()">
                                                        <button type="submit"
                                                                class="btn btn-outline-danger btn-sm">
                                                            <i class="fas fa-trash-alt me-1"></i>Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <div class="py-5">
                                <i class="fas fa-users fa-4x text-muted mb-4 opacity-25"></i>
                                <h4 class="text-muted mb-3">No Authors Found</h4>
                                <p class="text-muted mb-4">Get started by adding your first author to the library</p>
                                <a asp-action="AddAuthor" class="btn btn-primary px-4">
                                    <i class="fas fa-plus me-2"></i>Add First Author
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <!-- Card Footer -->
                <div class="card-footer bg-light py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Click on author names to view details or use action buttons
                            </small>
                        </div
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Avatar circle */
    .avatar-circle {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        font-weight: bold;
        font-size: 1.2rem;
    }

    /* Table hover effect */
    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
        transition: background-color 0.3s ease;
    }

    /* Card hover shadow */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    /* Button hover */
    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    /* Table cell vertical alignment */
    .table td, .table th {
        vertical-align: middle;
    }

    /* Gradient background for headers */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd, #0b5ed7);
    }

    /* Fade-in animation for rows */
    .fade-in {
        opacity: 0;
        animation: fadeIn 0.5s forwards;
    }

    @@keyframes fadeIn {
        to

    {
        opacity: 1;
    }

    }
</style>

<!-- Scripts -->
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this author?\n\nThis action cannot be undone.');
    }

    // Fade-in rows on page load
    document.addEventListener('DOMContentLoaded', function() {
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach((row, index) => {
            row.style.animationDelay = `${index * 0.05}s`;
            row.classList.add('fade-in');
        });
    });
</script>
