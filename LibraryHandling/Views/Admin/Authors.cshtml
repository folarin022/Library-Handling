@model IEnumerable<LibraryHandling.Data.Author>
@{
    ViewData["Title"] = "Authors";
    Layout = "_LayoutAdmin";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2>Authors</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="AddAuthor" class="btn btn-primary">
            Add Author
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">

                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Bio</th>
                            <th>DOB</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var author in Model)
                        {
                            <tr>
                                <td>@author.Name</td>
                                <td>@author.Bio</td>
                                <td>@author.DOB.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-action="EditAuthor" asp-route-id="@author.Id"
                                       class="btn btn-sm btn-warning">
                                        Edit
                                    </a>
                                    <a asp-action="DeleteAuthor" asp-route-id="@author.Id"
                                       class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
