@model IEnumerable<LibraryHandling.Dto.BookModel.BorrowingDto>

@{
    ViewData["Title"] = "Manage Borrowings";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="bi bi-bookmarks text-info me-2"></i>Borrowing Management
            </h1>
            <p class="text-muted mb-0">View, manage, and track all book borrowings</p>
        </div>
        <a asp-action="AddBorrowing" class="btn btn-info text-white">
            <i class="bi bi-plus-circle me-2"></i>Add New Borrowing
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary border-0 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Borrowings
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-bookmark-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning border-0 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Active Borrowings
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(b => !b.ReturnedDate.HasValue && b.DueDate >= DateTime.Now)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clock-history fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger border-0 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Overdue
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(b => !b.ReturnedDate.HasValue && b.DueDate < DateTime.Now)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success border-0 shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Returned
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(b => b.ReturnedDate.HasValue)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light py-3">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search by member, book, or ID..." id="searchInput">
                        <button class="btn btn-outline-info" type="button" id="searchButton">
                            <i class="bi bi-search"></i> Search
                        </button>
                        <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                            <i class="bi bi-x-circle"></i> Clear
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select" id="statusFilter">
                        <option value="all">All Status</option>
                        <option value="active">Active</option>
                        <option value="overdue">Overdue</option>
                        <option value="returned">Returned</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Borrowings Table -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="borrowingsTable">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="ps-4">
                                <i class="bi bi-hash"></i> ID
                            </th>
                            <th scope="col">
                                <i class="bi bi-person"></i> Member
                            </th>
                            <th scope="col">
                                <i class="bi bi-book"></i> Book
                            </th>
                            <th scope="col">
                                <i class="bi bi-calendar-check"></i> Borrowed
                            </th>
                            <th scope="col">
                                <i class="bi bi-calendar-x"></i> Due
                            </th>
                            <th scope="col">
                                <i class="bi bi-calendar-check"></i> Returned
                            </th>
                            <th scope="col">
                                <i class="bi bi-info-circle"></i> Status
                            </th>
                            <th scope="col" class="text-end pe-4">
                                <i class="bi bi-gear"></i> Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var borrowing in Model)
                        {
                            var isOverdue = !borrowing.ReturnedDate.HasValue && borrowing.DueDate < DateTime.Now;
                            var isActive = !borrowing.ReturnedDate.HasValue && borrowing.DueDate >= DateTime.Now;
                            var statusClass = borrowing.ReturnedDate.HasValue ? "success" :
                            isOverdue ? "danger" : "warning";
                            var statusText = borrowing.ReturnedDate.HasValue ? "Returned" :
                            isOverdue ? "Overdue" : "Active";

                            <tr class="@(isOverdue ? "table-danger" : "")" data-status="@statusText.ToLower()">
                                <td class="ps-4 fw-semibold">
                                    <small class="text-muted">@borrowing.Id.ToString().Substring(0, 8)...</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="bi bi-person-circle text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0">@borrowing.MemberName</h6>
                                            <small class="text-muted">ID: @borrowing.MemberId.ToString().Substring(0, 8)...</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <i class="bi bi-book text-primary"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0">@borrowing.BookTitle</h6>
                                            <small class="text-muted">ID: @borrowing.BookId.ToString().Substring(0, 8)...</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-nowrap">
                                        @borrowing.BorrowDate.ToString("MMM dd, yyyy")
                                        <br>
                                        <small class="text-muted">@borrowing.BorrowDate.ToString("hh:mm tt")</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-nowrap @(isOverdue ? "text-danger fw-bold" : "")">
                                        @borrowing.DueDate.ToString("MMM dd, yyyy")
                                        @if (isOverdue)
                                        {
                                            <br>
                                            <small class="badge bg-danger">
                                                @((DateTime.Now - borrowing.DueDate).Days) days overdue
                                            </small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (borrowing.ReturnedDate.HasValue)
                                    {
                                        <div class="text-nowrap text-success">
                                            @borrowing.ReturnedDate.Value.ToString("MMM dd, yyyy")
                                            <br>
                                            <small class="text-muted">@borrowing.ReturnedDate.Value.ToString("hh:mm tt")</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not returned</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@statusClass">@statusText</span>
                                    @if (!string.IsNullOrEmpty(borrowing.Notes))
                                    {
                                        <br>
                                        <small class="text-muted" title="@borrowing.Notes">
                                            <i class="bi bi-chat-left-text"></i> Has notes
                                        </small>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        @if (!borrowing.ReturnedDate.HasValue)
                                        {
                                            <form asp-action="MarkAsReturned" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@borrowing.Id" />
                                                <button type="submit" class="btn btn-sm btn-success"
                                                        title="Mark as Returned" onclick="return confirm('Mark this book as returned?')">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        <a asp-action="EditBorrowing" asp-route-id="@borrowing.Id"
                                           class="btn btn-sm btn-outline-info" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="DeleteBorrowing" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@borrowing.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    title="Delete" onclick="return confirm('Are you sure you want to delete this borrowing record?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-inbox display-6"></i>
                                        <h5 class="mt-3">No borrowing records found</h5>
                                        <p>Start by adding a new borrowing record</p>
                                        <a asp-action="AddBorrowing" class="btn btn-info">
                                            <i class="bi bi-plus-circle me-2"></i>Add First Borrowing
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Table Footer -->
        <div class="card-footer bg-light py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="text-muted">
                        Showing <span id="visibleCount">@Model.Count()</span> of @Model.Count() borrowings
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="float-end">
                        <button class="btn btn-outline-info btn-sm" id="exportBtn">
                            <i class="bi bi-download me-1"></i> Export
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h6 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="AddBorrowing" class="btn btn-info">
                            <i class="bi bi-plus-circle me-2"></i>New Borrowing
                        </a>
                        <button class="btn btn-outline-warning" id="sendRemindersBtn">
                            <i class="bi bi-envelope me-2"></i>Send Due Reminders
                        </button>
                        <button class="btn btn-outline-danger" id="viewOverdueBtn">
                            <i class="bi bi-exclamation-circle me-2"></i>View Overdue Only
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Borrowing Overview</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4 border-end">
                            <h4 class="text-primary">@Model.Count()</h4>
                            <small class="text-muted">Total</small>
                        </div>
                        <div class="col-4 border-end">
                            <h4 class="text-warning">@Model.Count(b => !b.ReturnedDate.HasValue && b.DueDate >= DateTime.Now)</h4>
                            <small class="text-muted">Active</small>
                        </div>
                        <div class="col-4">
                            <h4 class="text-danger">@Model.Count(b => !b.ReturnedDate.HasValue && b.DueDate < DateTime.Now)</h4>
                            <small class="text-muted">Overdue</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
            cursor: pointer;
        }

        .status-badge {
            font-size: 0.75em;
            padding: 0.25em 0.6em;
        }

        .overdue-row {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                background-color: rgba(220, 53, 69, 0.05);
            }

            50% {
                background-color: rgba(220, 53, 69, 0.1);
            }

            100% {
                background-color: rgba(220, 53, 69, 0.05);
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const table = document.getElementById('borrowingsTable');
            const searchInput = document.getElementById('searchInput');
            const searchButton = document.getElementById('searchButton');
            const clearSearch = document.getElementById('clearSearch');
            const statusFilter = document.getElementById('statusFilter');
            const visibleCount = document.getElementById('visibleCount');
            const rows = table.querySelectorAll('tbody tr');

            // Search functionality
            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase();
                const status = statusFilter.value;
                let visible = 0;

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const rowStatus = row.getAttribute('data-status');
                    const matchesSearch = text.includes(searchTerm);
                    const matchesStatus = status === 'all' || rowStatus === status;

                    if (matchesSearch && matchesStatus) {
                        row.style.display = '';
                        visible++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                visibleCount.textContent = visible;

                // Show empty state if no rows visible
                const emptyRow = table.querySelector('tbody tr:last-child');
                if (emptyRow && emptyRow.cells.length === 1) {
                    if (visible === 0 && searchTerm === '' && status === 'all') {
                        emptyRow.style.display = '';
                    } else {
                        emptyRow.style.display = 'none';
                    }
                }
            }

            // Event listeners
            searchButton.addEventListener('click', filterTable);
            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                statusFilter.value = 'all';
                filterTable();
            });

            searchInput.addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    filterTable();
                }
            });

            statusFilter.addEventListener('change', filterTable);

            // Row click for details (if you have a details view)
            rows.forEach(row => {
                if (!row.querySelector('td:last-child').textContent.includes('No borrowing')) {
                    row.addEventListener('click', function(e) {
                        // Don't trigger if clicking on buttons
                        if (!e.target.closest('a, button, .btn, .btn-group')) {
                            const id = this.querySelector('td:first-child small').textContent;
                            // You could redirect to details page
                            // window.location.href = `/Admin/BorrowingDetails/${id}`;
                        }
                    });
                }
            });

            // Quick action buttons
            document.getElementById('sendRemindersBtn').addEventListener('click', function() {
                if (confirm('Send reminder emails to all members with due books?')) {
                    // Implement reminder logic
                    alert('Reminders sent successfully!');
                }
            });

            document.getElementById('viewOverdueBtn').addEventListener('click', function() {
                statusFilter.value = 'overdue';
                filterTable();
            });

            // Export functionality
            document.getElementById('exportBtn').addEventListener('click', function() {
                // Simple CSV export
                const rows = table.querySelectorAll('tbody tr:not([style*="display: none"])');
                let csv = 'ID,Member,Book,Borrowed Date,Due Date,Returned Date,Status\n';

                rows.forEach(row => {
                    if (row.style.display !== 'none' && row.cells.length > 1) {
                        const cells = row.cells;
                        const id = cells[0].textContent.trim();
                        const member = cells[1].textContent.trim().replace(/\n/g, ' ');
                        const book = cells[2].textContent.trim().replace(/\n/g, ' ');
                        const borrowed = cells[3].textContent.trim().replace(/\n/g, ' ');
                        const due = cells[4].textContent.trim().replace(/\n/g, ' ');
                        const returned = cells[5].textContent.trim().replace(/\n/g, ' ');
                        const status = cells[6].textContent.trim();

                        csv += `"${id}","${member}","${book}","${borrowed}","${due}","${returned}","${status}"\n`;
                    }
                });

                const blob = new Blob([csv], { type: 'text/csv' });
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'borrowings_export.csv';
                a.click();
            });

            // Initialize
            filterTable();
        });
    </script>
}