@model List<LibraryHandling.Data.Borrowing>
@{
    ViewData["Title"] = "My Borrowings";
    Layout = "_MemberLayout";
}

<div class="member-container">
    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="member-header">
        <h2>
            <i class="fas fa-book me-2"></i>
            My Borrowed Books
        </h2>
        <p class="mb-0">Here are all the books you've borrowed from the library</p>
    </div>

    <!-- Action Buttons -->
    <div class="member-nav">
        <a asp-action="BorrowBook" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Borrow New Book
        </a>
    </div>

    <!-- Borrowings List -->
    @if (Model == null || !Model.Any())
    {
        <div class="member-card text-center py-5">
            <i class="fas fa-book-open fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">No Books Borrowed Yet</h4>
            <p class="text-muted">You haven't borrowed any books from the library.</p>
            <a asp-action="BorrowBook" class="btn btn-primary mt-2">
                <i class="fas fa-plus me-1"></i> Borrow Your First Book
            </a>
        </div>
    }
    else
    {
        <!-- Statistics -->
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h5 id="activeCount">0</h5>
                        <p class="mb-0">Currently Borrowed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 id="returnedCount">0</h5>
                        <p class="mb-0">Returned Books</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 id="totalCount">0</h5>
                        <p class="mb-0">Total Borrowed</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Borrowings Table -->
        <div class="member-card">
            <h5 class="mb-3">
                <i class="fas fa-list me-2"></i>
                Your Borrowing History
            </h5>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Book</th>
                            <th>Borrowed On</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var borrowing in Model)
                        {
                            var statusClass = borrowing.ReturnDate == null ? "warning" : "success";
                            var statusText = borrowing.ReturnDate == null ? "Borrowed" : "Returned";
                            var duration = borrowing.ReturnDate == null
                            ? (DateTime.Now - borrowing.BorrowDate).Days
                            : (borrowing.ReturnDate.Value - borrowing.BorrowDate).Days;

                            <tr class="borrowing-row" data-status="@(borrowing.ReturnDate == null ? "active" : "returned")">
                                <td>
                                    <strong>@borrowing.Book?.Title ?? "Unknown Book"</strong><br>
                                </td>
                                <td>
                                    @borrowing.BorrowDate.ToString("MMM dd, yyyy")<br>
                                    <small class="text-muted">@duration day@(duration != 1 ? "s" : "") ago</small>
                                </td>
                                <td>
                                    <span class="badge bg-@statusClass">
                                        @statusText
                                    </span>
                                    @if (borrowing.ReturnDate == null && duration > 14)
                                    {
                                        <br>
                                        <small class="text-danger">
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            Overdue!
                                        </small>
                                    }
                                </td>
                                <td>
                                    @if (borrowing.ReturnDate == null)
                                    {
                                        <form asp-action="ReturnBook" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@borrowing.Id" />
                                            <button type="submit" class="btn btn-success btn-sm"
                                                    onclick="return confirm('Return this book?')">
                                                <i class="fas fa-undo me-1"></i> Return
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-check me-1"></i>
                                            Returned
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3 text-center text-muted">
                <small>
                    <i class="fas fa-info-circle me-1"></i>
                    Showing <span id="showingCount">@Model.Count</span> book@(Model.Count != 1 ? "s" : "")
                </small>
            </div>
        </div>
    }

    <!-- Statistics Update Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            updateStatistics();
        });

        function updateStatistics() {
            const totalRows = document.querySelectorAll('.borrowing-row').length;
            const activeRows = document.querySelectorAll('.borrowing-row[data-status="active"]').length;
            const returnedRows = document.querySelectorAll('.borrowing-row[data-status="returned"]').length;

            document.getElementById('activeCount').textContent = activeRows;
            document.getElementById('returnedCount').textContent = returnedRows;
            document.getElementById('totalCount').textContent = totalRows;
            document.getElementById('showingCount').textContent = totalRows;
        }
    </script>
</div>